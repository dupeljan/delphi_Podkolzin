unit WordExelReport;

interface
procedure example_word();
procedure example_exel();

implementation
uses comObj;

procedure example_word;
var
  i: integer;
  MS_Word: Variant;
begin
  try
    MS_Word:=CreateOleObject('Word.Application');
    MS_Word.Visible:=true;
    MS_Word.Documents.Add;
    MS_Word.Selection.Start:=20;
    MS_Word.ActiveDocument.Range.InsertAfter('   ЧЕК №#: ');

    MS_Word.Visible:=true;
    MS_Word.DisplayAlerts := False;
  except
    MS_Word.DisplayAlerts := False;
    MS_Word.Quit;
  end;
end;

procedure example_exel;
var
  Excel, NewDoc: Variant;
begin
  { Creates a Microsoft Word application. }
  excel := CreateOleObject('Exel.Application');
  { Creates a new Microsoft Word document. }
  NewDoc := excel.Documents.Add;
  Excel.Visible:=True; //После отладки можно закомментировать эту строку
  Excel.DisplayAlerts:=False;
end;
end.
